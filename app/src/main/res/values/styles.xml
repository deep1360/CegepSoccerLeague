<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HomeTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextInputHint" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputError" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/user_auth_default_textinput_border_color</item>
        <item name="hintTextAppearance">@style/TextInputHint</item>
        <item name="errorTextAppearance">@style/TextInputError</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="errorIconTint">@color/colorError</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="NavDrawerTexApptStyle" parent="TextAppearance.AppCompat.Menu">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">50dp</item><!-- menu item height- vary as u need -->
    </style>

    <style name="ToolbarAppearance" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
