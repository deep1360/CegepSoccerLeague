<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/colorAccent"
    app:strokeWidth="2dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/pm_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:layout_margin="8dp" />

        <View
            android:id="@+id/pm_item_divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/pm_item_date"
            android:background="@color/colorAccent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pm_team1_item_icon_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/pm_item_divider1"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/add_team_icon"
                    android:id="@+id/pm_team1_item_img_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/pm_team1_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/pm_team1_item_icon_cv"
                app:layout_constraintStart_toEndOf="@id/pm_team1_item_icon_cv"
                app:layout_constraintBottom_toBottomOf="@id/pm_team1_item_icon_cv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:text="Team 1 Name"
                android:padding="4dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/textBlackGrey"
                android:textStyle="bold"
                android:textSize="18sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pm_team2_item_icon_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/pm_team1_item_icon_cv"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/add_team_icon"
                    android:id="@+id/pm_team2_item_img_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/pm_team2_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/pm_team2_item_icon_cv"
            app:layout_constraintStart_toEndOf="@id/pm_team2_item_icon_cv"
            app:layout_constraintBottom_toBottomOf="@id/pm_team2_item_icon_cv"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Team 2 Name"
            android:padding="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/textBlackGrey"
            android:textStyle="bold"
            android:textSize="18sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
